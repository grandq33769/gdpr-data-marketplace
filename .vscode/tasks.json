{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Python Code",
            "type": "shell",
            "command": "pipenv",
            "args": [
                "run",
                "python",
                "'${workspaceFolder}/run.py'"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}